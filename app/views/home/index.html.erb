<div class="card" style="margin-top: 50px;">
  <div class="card-body">
    <h5 class="card-title">BitCoin</h5>
    <div id="charts"></div>
    <%= line_chart @currencies, xtitle: "Interval", ytitle: "Rate", prefix: "$", download: true, messages: {empty: "No data"}, dataset: {borderWidth: 10}  %>
  </div>
</div>
<script>
    Highcharts.stockChart('charts', {


        rangeSelector: {
            selected: 0
        },

        title: {
            text: 'Bit Coin Exchange rate'
        },

        tooltip: {
            style: {
                width: '200px'
            },
            valueDecimals: 4,
            shared: true
        },

        yAxis: {
            title: {
                text: 'Exchange rate'
            }
        },

        series: [{
            name: 'BitCoin price',
            data: <%= @currencies %>,
            id: 'dataseries'
        }]
    });
</script>